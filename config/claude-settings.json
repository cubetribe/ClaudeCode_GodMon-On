{
  "model": "claude-sonnet-4-20250514",
  "permissions": {
    "allowedTools": ["Read", "Write", "Edit", "Bash", "Glob", "Grep"],
    "deny": [
      "Write(.env*)",
      "Write(*.pem)",
      "Write(*.key)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/scripts/session-start.js",
            "timeout": 15
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node scripts/check-api-impact.js \"$CLAUDE_FILE_PATH\"",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "parallelQualityGates": {
    "enabled": true,
    "timeout": 600000,
    "fallbackToSequential": true,
    "description": "v5.6.0: Parallel execution of @validator and @tester for 40% faster validation"
  },
  "mcpHealthCheck": {
    "enabled": true,
    "tier1Timeout": 5000,
    "tier2Timeout": 2000,
    "tier3Timeout": 500,
    "description": "v5.6.0: Three-tier MCP health validation system"
  }
}
